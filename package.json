{
  "name": "short-payment-descriptor",
  "version": "1.0.1",
  "description": "Package for generating Short Payment Descriptor strings for QR code payments.",
  "keywords": [
    "qr",
    "payment",
    "spayd",
    "qr platba"
  ],
  "license": "ISC",
  "author": "Adam Josefus",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "format": "biome format ./src",
    "prepublishOnly": "npm run validate && npm run format && npm run build",
    "test": "vitest run ./src",
    "test:watch": "vitest dev ./src",
    "validate": "tsc --noEmit",
    "validate:watch": "tsc --noEmit --watch"
  },
  "devDependencies": {
    "biome": "^0.3.3",
    "typescript": "^5.3.2",
    "vitest": "^0.34.6"
  },
  "dependencies": {}
}
